- model_class = Type
.page-header
  %h1=t '.title', :default => 'Categorii'
%table.table.table-striped
  %thead
    = render :partial => "shared/admin/pagination"
    %tr
      %th= :ID
      %th= :Nume
      %th= :Creat 
      %th= :Updatat 
      %th= t '.actions', :default => t('Actiuni')
  %tbody
    - @results.each do |type|
      %tr
        %td= link_to type.id, admin_type_path(type)
        %td= type.name
        %td= type.created_at
        %td= type.updated_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_type_path(type), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_type_path(type), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
  %tfoot
    = render :partial => "shared/admin/pagination"

= link_to t('.new', :default => t("helpers.links.new")), new_admin_type_path, :class => 'btn btn-primary'