- model_class = Type
.row
  .span12
    .page-header
      %h1=t '.title', :default => "Categorie: #{@type.name}"
    .row
      .span6
        %p
          %strong= 'Nume:'
          %br
          = @type.name
        %p
          %strong= 'Creat:'
          %br
          = @type.created_at
        %p
          %strong= 'Updatat:'
          %br
          = @type.updated_at
      .span6
        %p
          %strong= 'Valori:'
          %br
          - @type.type_values.each do |v|
            = v.value
            %br

    .form-actions
      = link_to t('.back', :default => 'Inapoi'), admin_types_path, :class => 'btn'
      = link_to t('.edit', :default => 'Editeaza'), edit_admin_type_path(@type), :class => 'btn'
      = link_to t('.destroy', :default => 'Sterge'), admin_type_path(@type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("Esti sigur?", :default => 'Esti sigur?')) }, :class => 'btn btn-mini btn-danger'