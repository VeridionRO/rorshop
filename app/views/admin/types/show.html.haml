- model_class = Type
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @type.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_types_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_type_path(@type), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_type_path(@type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
