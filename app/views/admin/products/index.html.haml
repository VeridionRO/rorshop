- model_class = Product
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= :ID
      %th= :Nume
      %th= :Descriere
      %th= :Pret
      %th= :Creat
      %th.actions{width: '110px'}=t '.actions', :default => t("helpers.actions")
  %tbody
    - @products.each do |product|
      %tr
        %td= link_to product.id, admin_product_path(product)
        %td= product.name
        %td= product.description
        %td= product.price
        %td= product.created_at
        %td
          = link_to t('.edit', :default => "Editeaza"), edit_admin_product_path(product), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => "Sterge"), admin_product_path(product), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => "Produs Nou"), new_admin_product_path, :class => 'btn btn-primary'