- model_class = Product
.page-header
  %h1=t '.title', :default => 'Produs'
.row
  .span6
    %p
      %strong= 'Nume:'
      %br
      = @product.name
    %p
      %strong= 'Descriere:'
      %br
      = @product.description
    %p
      %strong= 'Pret:'
      %br
      = @product.price
    %p
      %strong= 'Creat:'
      %br
      = @product.created_at
    %p
      %strong= 'Updatat:'
      %br
      = @product.updated_at
  .span6
    - @product.images.each do |image|
      = image_tag image.image.url
.form-actions
  = link_to t('.back', :default => 'Inapoi'), admin_products_path, :class => 'btn'
  = link_to t('.edit', :default => 'Editeaza'), edit_admin_product_path(@product), :class => 'btn'
  = link_to t('.destroy', :default => "Sterge"), admin_product_path(@product), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esti sigur?')) }, :class => 'btn btn-mini btn-danger'