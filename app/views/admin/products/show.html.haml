- model_class = Product
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize
%p
  %strong= 'Nume:'
  %br
  = @product.name
%p
  %strong= 'Descriere:'
  %br
  = @product.description
%p
  %strong= 'Pret:'
  %br
  = @product.price
.form-actions
  = link_to t('.back', :default => 'Inapoi'), admin_products_path, :class => 'btn'
  = link_to t('.edit', :default => 'Editeaza'), edit_admin_product_path(@product), :class => 'btn'
  = link_to t('.destroy', :default => 'Sterge'), admin_product_path(@product), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
