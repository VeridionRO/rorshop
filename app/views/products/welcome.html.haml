  %body#body
    #header
      .main
        .clear.currency-bg
          #logo
            %a{href: "#"}
              %img{alt: "", src: "/assets/logo.jpg"}/
          .float-right
            .currency
              .moduletable
                %h3 currencies:
                %form{action: "#", method: "post"}
                  %select.inputbox{name: "product_currency", size: "1"}
                    %option{value: "EUR"} Euro
                    %option{selected: "selected", value: "USD"} US Dollar
                  %input.button{name: "submit", type: "submit", value: "Change"}/
            .cart
              .moduletable
                %h3 Shopping Cart:
                Your Cart is currently empty.
                %a{href: "#"} Show Cart
      .menu-bg
        .main
          .clear
            #topmenu
              %ul.menu-nav
                = render :partial => 'shared/menus'
            #search
              .moduletable
                %h3 search:
                %form{action: "#", method: "post"}
                  .search
                    %input#mod_search_searchword.inputbox{alt: "Search", maxlength: "20", name: "searchword", onblur: "if(this.value=='') this.value='search...';", onfocus: "if(this.value=='search...') this.value='';", size: "20", type: "text", value: "search..."}/
                    %input.button{onclick: "this.form.searchword.focus();", src: "/assets/searchButton.gif", type: "image", value: "Search"}/
      .banners-bg
        .main
          .clear
            .moduletable
              .bannergroup
                .banneritem
                  %a{href: "#"}
                    %img{alt: "Banner", src: "/assets/banner1.jpg"}/
                  .clr
            .moduletable
              .slide-box
                .anythingSlider
                  .wrapper{style: "overflow: hidden;"}
                    %ul
                      %li.slide1
                        %a.product-name{href: "#"}
                      %li.slide2
                        %a.product-name{href: "#"}
                      %li.slide3
                        %a.product-name{href: "#"}
                  %a.arrow.forward >
                  %a.arrow.back <
                  #thumbNav
                    %a{href: "#"} 1
                    %a.cur{href: "#"} 2
                    %a{href: "#"} 3
                  %a#start-stop.playing{href: "#"} Stop
    .main
      #wrapper
        .clear
          #left
            .clear
              .module-categories
                %h3
                  %span Categories:
                .boxIndent
                  #relative_div{style: "position:relative;z-index:0"}
                  %ul.level1
                    %li.level1.item1
                      %a.level1.item1{href: "#", target: "_self", title: "Diamond Rings"}
                        %span Diamond Rings
              .module-login
                %h3
                  %span Login Form
                .boxIndent
                  %form.form-login{action: "#", method: "post", name: "login"}
                    .part1
                      .clear
                        .username
                          %input#mod_login_username.inputbox{alt: "Username", name: "username", onblur: "if(this.value=='') this.value='Username'", onfocus: "if(this.value =='Username' ) this.value=''", type: "text", value: "Username"}/
                        .password
                          %input#mod_login_password.inputbox{alt: "Password", name: "passwd", onfocus: "this.value=null", type: "password", value: "password"}/
                      #inputs
                        .rememberCheck
                          %input#mod_login_remember.checkbox{alt: "Remember Me", name: "remember", type: "checkbox", value: "yes"}/
                          %label.remember{for: "mod_login_remember"}
                            Remember Me
                        %input.button{name: "Submit", type: "submit", value: "Log in"}/
                    #form-login-remember
                      %a{href: "#"}
                        Forgot your password?
                      %br/
                      %a{href: "#"}
                        Forgot your username?
                      %br/
                      No Account Yet?
                      %br/
                      %a.reg{href: "#"} Create an account
              .module
                %h3
                  %span Newsletter
                .boxIndent
                  %form#subscribeFormModule{action: "#", method: "post", name: "subscribeFormModule"}
                    .newslatter
                      .width
                        %span enter your e-mail
                        %br/
                        %input#email.moduleInput{maxlength: "250", name: "email", size: "10", type: "text", value: ""}/
                        %input.button{name: "Submit", type: "submit", value: "Submit"}/
                        %a{href: "#"} Unsubscribe
          .container
            .module-new
              .boxIndent
                %table{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
                  %tbody
                    - (0..2).each do |counter|
                      %tr
                        - limit_left = counter * 3;
                        - limit_right = ((counter + 1) * 3 - 1);
                        - if @products[limit_left]
                          - @products[limit_left..limit_right].each do |product|
                            = render :partial => 'shared/products/product', :locals => {:product => product}
