- content_for(:title) do
  %title Magazin bijuterii
- content_for(:header) do
  = render :partial => 'shared/top_header'
  = render :partial => 'shared/menu_header'
- content_for(:sidebar) do
  = render :partial => 'shared/categories'
  - if !is_logged_in
    = render :partial => 'shared/login_box'
  = render :partial => 'shared/newsletter'
- content_for(:content) do
  = render :partial => 'shared/products/product', :locals => {:product => @product}