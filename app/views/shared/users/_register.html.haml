.container
  .content-indent
    .componentheading Inregistreaza-te
    = simple_form_for @user,
      url: (@user.id ? user_path(@user) : users_path(@user)),
      html: { :class => 'form-horizontal', :multipart => true } do |f|
      .row
        .span5
          = f.input :first_name, label: 'Prenume'
          = f.input :last_name, label: 'Nume'
          = f.input :email, label: 'Email'
          = f.input :password, label: 'Parola'
          = f.input :password_confirmation, label: 'Confirma'
      .row
        .span12
      .form-actions
        = f.submit 'Salveaza', :class => 'btn btn-primary'
    / %table.contentpane{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
    /   %tbody
    /     %tr
    /       %td{height: "40", width: "30%"}
    /         %label#namemsg{for: "name"}
    /           Name:
    /       %td
    /         %input#name.inputbox.required{maxlength: "50", name: "name", size: "40", type: "text", value: ""}/
    /         *
    /     %tr
    /       %td{height: "40"}
    /         %label#usernamemsg{for: "username"}
    /           Username:
    /       %td
    /         %input#username.inputbox.required.validate-username{maxlength: "25", name: "username", size: "40", type: "text", value: ""}/
    /         *
    /     %tr
    /       %td{height: "40"}
    /         %label#emailmsg{for: "email"}
    /           E-mail:
    /       %td
    /         %input#email.inputbox.required.validate-email{maxlength: "100", name: "email", size: "40", type: "text", value: ""}/
    /         *
    /     %tr
    /       %td{height: "40"}
    /         %label#pwmsg{for: "password"}
    /           Password:
    /       %td
    /         %input#password.inputbox.required.validate-password{name: "password", size: "40", type: "password", value: ""}/
    /         *
    /     %tr
    /       %td{height: "40"}
    /         %label#pw2msg{for: "password2"}
    /           Verify Password:
    /       %td
    /         %input#password2.inputbox.required.validate-passverify{name: "password2", size: "40", type: "password", value: ""}/
    /         *
    /     %tr
    /       %td{colspan: "2", height: "40"}
    /         Fields marked with an asterisk (*) are required.
    / %button.button.validate{type: "submit"} Register