= simple_form_for @product, 
  url: (@product.id ? admin_product_path(@product) : admin_products_path(@product)),
  html: { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :description
  = f.input :price
  / .control-group
  /   = f.label :name, 'Nume', :class => 'control-label'
  /   .controls
  /     = f.text_field :name, :class => 'text_field'
  / .control-group
  /   = f.label :description, 'Descriere', :class => 'control-label'
  /   .controls
  /     = f.text_field :description, :class => 'text_field'
  / .control-group
  /   = f.label :price, 'Pret', :class => 'control-label'
  /   .controls
  /     = f.number_field :price, :class => 'text_field', :step => 0.1
  .form-actions
    = f.submit 'Salveaza', :class => 'btn btn-primary'
    = link_to t('.cancel', :default => 'Anuleaza'), admin_products_path, :class => 'btn'
